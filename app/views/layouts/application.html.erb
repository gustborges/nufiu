<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= tag :meta, name: "current-user", content: current_user.id, data: { email: current_user.email, name: current_user.name } if user_signed_in? %>
    <title><%= meta_title %></title>
    <%= favicon_link_tag %>
    <meta name="description" content="<%= meta_description %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />
    
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <script
      src="https://unpkg.com/cloudinary-core@latest/cloudinary-core-shrinkwrap.js"
      type="text/javascript">
    </script>
  </head>
  <body>
    <div class="container-fluid">
      <%= render 'shared/navbar' %>
      <%= render 'shared/flashes' %>
      <%= yield %>
      <%= render 'shared/footer' %>
    </div>
    <% if controller_name == 'plants' %>
    <a href="https://api.whatsapp.com/send?phone=5521993444535" class="float" target="_blank"><i class="fa fa-whatsapp my-float"></i></a>
    <% end %>
  </body>
  <%= javascript_pack_tag 'cloudinary' %>
</html>





<div class="add-margins">
  <h1>Edite seus dados</h1>
  <p>Mantenha seus dados atualizados para entrarmos em contato e enviarmos os produtos para o endereço correto.</p>
</div>
<div class="form-container">
  <div class="new-plant-form">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, label: "Nome", required: true, autofocus: true %>
        <%= f.input :email, label: "E-mail", required: true %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :address, label: "Endereço", required: true %>
        <%= f.input :address_complement, label: "Complemento do Endereço", hint: "Apartamento, casa, bloco", required: true %>
        <%= f.association :suburb, label: "Bairro", hint: "Entregamos apenas nos bairros listados", label_method: :name %>
        <%= f.input :zip_code, label: "CEP", placeholder: "00000-00", required: true %>
        <%= f.input :location_details, label: "Referência", placeholder: "Próximo a..." %>
        <%= f.input :phone, label: "Telefone", placeholder: "(21) 00000-0000", required: true %><br />
        <p><strong>Preencha os itens abaixo apenas se quiser mudar a senha</strong></p>
       <%= f.input :password,
                    label: "Nova senha",
                    hint: "Deixe em branco se preferir manter a mesma",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirme sua nova senha",
                    hint: "Digite-a novamente",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    label: "Senha atual",
                    hint: "Precisamos da sua senha anterior para confirmar",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Atualizar dados", class: "green-button", redirect_to: :back %>
      </div>
    <% end %>
  </div>
</div>

<% content_for :head do %>
    <%= stylesheet_link_tag 'components/_form', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>
<div class="add-margins">
  <h1>Entrar na sua conta</h1>
  <p>Digite seu e-mail e senha para acessar e poder editar seus dados.</p>
</div>

<div class="form-container">
<p><strong>Ainda nÃ£o tem conta?</strong> <%= link_to "Cadastre-se aqui", new_user_registration_path %>.</p>
  <div class="new-plant-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label: "Senha",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Lembre de mim", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Acessar", :style => 'padding-left: 2.3em; padding-right: 2.3em;', class: "green-button" %>
      </div>
    <% end %>
    <div style="margin-top: 14px">
      <%= link_to "Esqueceu a sua senha?", new_password_path(resource_name) %><br />
    </div>
  </div>
</div>

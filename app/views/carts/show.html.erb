              <%= link_to "<i class='fas fa-plus-circle'></i>".html_safe, plant_cart_plant_path(plant_id: cart_product[1][0].plant.id, fix_amount: "add"), method: :put, class: "pl-2" %>
            </p>
          </div>
          <div class="col-3 cart-plant-price">
            <p>R$ <%= cart_product[1][0].plant.price %></p>
          </div>
        </div>
      <% end %>
  </div>

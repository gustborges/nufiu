<div class="row">
  <div class="col-12">
    <div class="main-banner">
      <h1>Nufiu Jardinagem</h1>
      <p>Plantas ornamentais e decoração.</p>
    </div>
  </div>
</div>

<div class="row justify-content-center add-margins">
  <% @plants.each do |plant|%>
    <div class="col-12 col-sm-6 col-md-4">
      <div class="plant-card text-center m-0">
        <%= link_to plant_path(plant), class:"text-decoration-none" do %>
          <% if plant.photo.attached? %>
            <%= cl_image_tag plant.photo.key, class: "card-img", alt: "#{plant.name}" %>
          <% else %>
            <%= image_tag "plants/2.png", class: "card-img", alt: "#{plant.name}" %>
          <% end %>
          <div class="plant-card-text">
            <h5 class="card-title"><%= plant.name.upcase %></h5>
            <h5 class="card-price"><%= "#{number_to_currency(plant.price, unit: 'R$ ', separator: ',')}" %></h5>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>



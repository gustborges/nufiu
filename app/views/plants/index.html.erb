<div class="banner">
  <h1>Nufiu Jardinagem</h1>
  <p>Compre plantas em casa.</p>
</div>
<div class="plants-container">
  <% @plants.each do |plant|%>
    <%= link_to plant_path(plant), class:"text-decoration-none" do %>
      <div class="plant-card">
        <% if plant.photo.attached? %>
          <%= cl_image_tag plant.photo.key, class: "card-img-top", alt: "#{plant.name}" %>
        <% else %>
          <%= image_tag "plants/2.png", class: "card-img-top", alt: "#{plant.name}" %>
        <% end %>
        <div class="plant-card-text">
          <h5 class="card-title"><%= plant.name.upcase %></h5>
          <h5 class="card-price"><%= "#{number_to_currency(plant.price, unit: 'R$ ', separator: ',')}" %></h5>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
